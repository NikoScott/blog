{% extends 'base.html.twig' %}

{% block title %}Profil !{% endblock %}

{% block body %}

<div class="d-flex justify-content-center" style="margin-top:140px;">
    <div class="p-4">
        <img alt="profil-picture" src="https://picsum.photos/150" style="border-radius:50%">
    </div>

    <div class="text-center mt-2 p-4 lh-lg">
        <ul>
            {# <li> {{ dump(app.user) }} </li> #}
            <li class="text-uppercase"> {{ app.user.firstName }}  {{ app.user.lastName }}</li>
            <li> {{ app.user.email }}</li>
            <li> {{ app.user.dateOfBirth|date("d-m-Y") }}</li>
            <li> {{ app.user.roles[0] }}</li>
        </ul>
    </div>
</div>


    <div class="d-flex justify-content-center p-4">
        <a aria-label="editer le profil" href="{{path('/profile/{id}/modify')}}" class="btn btn-light mb-3"> Editer mon profil </a>
    </div>


{% endblock %}
